terraform {
  required_version = ">= 0.13.3"
  required_providers {
    ibm = {
      source  = "ibm-cloud/ibm"
      version = ">= 1.16.1"
    }
  }
}

provider "ibm" {
  ibmcloud_api_key   = "{{ ibmcloud_api_key }}"
  generation         = 2
  region             = "eu-de"
  iaas_classic_username = "{{ iaas_classic_username }}"
  iaas_classic_api_key  = "{{ iaas_classic_api_key }}"
}
