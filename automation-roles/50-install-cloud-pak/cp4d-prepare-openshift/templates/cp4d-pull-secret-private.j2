apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: cp4d-pull-secret-private
  namespace: kube-system
  labels:
    tier: management
    app: cp4d-pull-secret-private
spec:
  selector:
    matchLabels:
      name: cp4d-pull-secret-private
  template:
    metadata:
      labels:
        name: cp4d-pull-secret-private
    spec:
      hostNetwork: true
      hostPID: true
      hostIPC: true
      containers:
        - name: sleepforever
          resources:
            requests:
              cpu: 0.01
          image: alpine:3.6
          command: ["/bin/sh", "-c"]
          args:
            - >
              date >> /ext-tmp/cp4d-pull-secret-private.log ;
              yum install -y jq ;
              cat /ext-config/config.json ;
              cat /ext-config/config.json | \
                jq --arg private_registry "{{ ibm_cloud_cr_server }}" \
                --arg pull_secret $(echo -n "iamapikey:{{ secret_value }}" | base64 -w0) \
                '.auths += {($private_registry): {"auth": $pull_secret, "email": "not-used"}}' \
                > /ext-tmp//newdockerconfigjson;
              cat /ext-tmp/newdockerconfigjson /ext-config/config.json ;
              cat /ext-config/config.json ;
              while true; do
                sleep 100000;
              done
          volumeMounts:
            - name: modifytmp
              mountPath: /ext-tmp
            - name: modifyconfig
              mountPath: /ext-config
      volumes:
        - name: modifytmp
          hostPath:
            path: /tmp
        - name: modifyconfig
          hostPath:
            path: /.docker
