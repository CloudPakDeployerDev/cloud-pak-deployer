/opt/ansible/bin/apply-cr \
    --release={{ current_cp4d_cluster.cp4d_version }} \
    --license_acceptance=true \
    -v \
    --cpd_instance_ns={{ current_cp4d_cluster.project }} \
    --components={% for c in _p_current_cp4d_cluster.cartridges -%}
{%- if (c.state | default('installed')) == 'installed' -%}
{%- if not loop.first -%},{% endif -%}
{{ c.name }}
{%- endif -%}
{%- endfor %} \
{% if selected_openshift_storage.storage_type == "ocs" -%}
    --storage_vendor=ocs
{%- elif selected_openshift_storage.storage_type == "pwx" -%}
    --storage_vendor=portworx
{%- else -%}
    --file_storage_class={{ ocp_storage_class_file }} --block_storage_class={{ ocp_storage_class_block }}
{%- endif -%}